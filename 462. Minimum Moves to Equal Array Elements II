}();



class Solution {
public:
    int minMoves2(vector<int>& nums) {

// SOLUTION 1
        // sort(nums.begin(), nums.end());
        // int k = nums[nums.size() >> 1];
        // int ans = 0;
        // for (int& v : nums) {
        //     ans += abs(v - k);
        // }
        // return ans;

// SOLUTION 2
        sort(nums.begin(),nums.end());
        int n=nums.size();
        int moves=0;
        int med;
        if(n%2!=0){
          med=(n-1)/2;
          for(int i=0;i<n;i++){
            moves+=abs(nums[med]-nums[i]);
          }
        }
        else{
            med=n/2;
            for(int i=0;i<n;i++){
                moves+=abs(nums[med]-nums[i]);
            }
        }
        return moves;
    }
};
